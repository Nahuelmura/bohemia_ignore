@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/loguin.css" asp-append-version="true" />


    <body class="Imagen_Loguin">
        
   


    

    <div class="container px-4 py-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="my-5 display-5 fw-bold ls-tight Textobohemia" style="color:rgb(255, 255, 255)">
                    BOHEMIA<br />
                    <span >Inicia sesión en tu cuenta</span>
                </h1>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="cardIngreso">
                    <div class="card-body px-4 py-5 color">
                        <form id="account" method="post">
                            <h2 class="text-center Textobohemia" style="color:rgb(255, 255, 255)">Ingreso</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-outline mb-3">
                                <input asp-for="Input.Email" class="form-control bg-white" autocomplete="username" placeholder="Correo" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-3">
                                <input asp-for="Input.Password" class="form-control bg-white" autocomplete="current-password" placeholder="Contraseña" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-check d-flex justify-content-center mb-3">
                                <input class="form-check-input me-2" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                            <button type="submit" class="btn btn-light btn-block">Inicio</button>
                            <div class="text-center mt-3">
                                @* <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p> *@
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registre  nuevo usuario</a>
                                </p>
                                @* <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p> *@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

 </body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
