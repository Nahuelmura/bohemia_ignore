@{
    ViewData["Title"] = "Proveedores";
}

<body class="Fondo_cobro">

    <link rel="stylesheet" href="~/css/Proveedor.css" asp-append-version="true" />

    <h1 class="Textobohemia text-center">Proveedores</h1>

    <h6 class="Textobohemia text-center mb-4">
        En esta sección usted podrá registrar los proveedores, gestionar sus datos y realizar ediciones cuando sea
        necesario.
    </h6>

    <div class="container cobros-dark">

        <input type="hidden" id="ProveedorID" value="0">

        <!-- ================= FORMULARIO ================= -->
        <div class="row mb-4">

            <div class="col-md-4">
                <label class="form-label Textobohemia">Nombre</label>
                <input type="text" class="form-control" id="nombre" placeholder="⚠️ Ingresa el nombre del proveedor">
                <div id="alertaNombre" class="alert alert-warning mt-2 d-none">
                    ⚠️ Cuidado con los espacios
                </div>
            </div>

            <div class="col-md-4">
                <label class="form-label Textobohemia">Localidad</label>
                <input type="text" class="form-control" id="localidad" placeholder="⚠️ Ingresa la localidad">
            </div>

            <div class="col-md-4">
                <label class="form-label Textobohemia">Teléfono</label>
                <input type="number" class="form-control" id="telefono" placeholder="⚠️ Ingresa el número de teléfono">
            </div>

        </div>

        <div class="row mb-4 align-items-end">

            <div class="col-md-4">
                <label class="form-label Textobohemia">Email</label>
                <input type="text" class="form-control" id="email" placeholder="⚠️ Ingresa el email">
            </div>

            <div class="col-md-4">
                <label class="form-label Textobohemia">CUIT</label>
                <input type="number" class="form-control" id="cuit" placeholder="⚠️ Ingresa el CUIT">
            </div>

            <div class="col-md-4 mt-3">
                <button class="btn btn-outline-dark w-100" onclick="GuardarProveedor()">
                    Guardar Proveedor
                </button>
            </div>

        </div>

        <!-- ================= TABLA ================= -->
        <div class="table-responsive mt-4">
            <table class="table table-hover table-dark table-sm">
                <thead>
                    <tr>
                        <th class="Textobohemia-tabla">Nombre</th>
                        <th class="Textobohemia-tabla ocultar-en-768px">Localidad</th>
                        <th class="Textobohemia-tabla">Teléfono</th>
                        <th class="Textobohemia-tabla ocultar-en-768px">Email</th>
                        <th class="Textobohemia-tabla ocultar-en-768px">CUIT</th>
                        <th class="Textobohemia-tabla">Editar</th>
                        <th class="Textobohemia-tabla ocultar-en-768px">Estado</th>
                    </tr>
                </thead>
                <tbody id="listadoProveedores"></tbody>
            </table>
        </div>

    </div>

    <!-- ================= MODAL EDITAR ================= -->
    <div class="modal fade" id="modalEditarProveedor" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content cobros-dark">

                <div class="modal-header">
                    <h5 class="modal-title Textobohemia">Editar Proveedor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="ProveedorIDModal" value="0">

                    <div class="mb-3">
                        <label class="form-label Textobohemia">Nombre</label>
                        <input type="text" class="form-control" id="nombreModal">
                    </div>

                    <div class="mb-3">
                        <label class="form-label Textobohemia">Localidad</label>
                        <input type="text" class="form-control" id="localidadModal">
                    </div>

                    <div class="mb-3">
                        <label class="form-label Textobohemia">Teléfono</label>
                        <input type="text" class="form-control" id="telefonoModal">
                    </div>

                    <div class="mb-3">
                        <label class="form-label Textobohemia">Email</label>
                        <input type="text" class="form-control" id="emailModal">
                    </div>

                    <div class="mb-3">
                        <label class="form-label Textobohemia">CUIT</label>
                        <input type="number" class="form-control" id="dnicuitModal">
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button class="btn btn-outline-dark" onclick="GuardarProveedor()">Guardar</button>
                </div>

            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/Proveedor.1.0.0.js"></script>
    }

</body>