@{
    ViewData["Title"] = "Cobros";
}

<body class="Fondo_cobro">

    <h1 class="Textobohemia" style="text-align: center ;">Cobros </h1>



    <h6 class="Textobohemia text-center mb-4">
        En esta sección usted podrá ingresar los cobros por cliente.
    </h6>

    <div class="container cobros-dark">

        <input type="hidden" id="CobroID" value="0">
        <input type="hidden" id="ClienteID" value="0">

        <!-- ================= FORMULARIO ================= -->
        <div class="row mb-4">
            <div class="col-md-4">
                <label class="form-label Textobohemia" style="color:white ;">Monto del cobro</label>
                <input type="number" class="form-control" id="monto" placeholder="Ej: 300000">
            </div>

            <div class="col-md-4">
                <label class="form-label Textobohemia" style="color:white ;">Forma de Cobro</label>
                @Html.DropDownList(
                "FormaCobro",
                                (IEnumerable<SelectListItem>)ViewBag.FormaCobro,
                                new { @class = "form-control select2" }
                                )
            </div>

            <div class="col-md-4">
                <label class="form-label Textobohemia" style="color:white ;">Fecha de Cobro</label>
                <input type="date" class="form-control" id="fecha" style=";">
            </div>
        </div>

        <!-- ================= CLIENTE + DATOS (MISMA ALTURA) ================= -->
        <div class="row mb-4 align-items-end">

            <div class="col-md-2 position-relative">
                <label class="form-label Textobohemia" style="color:white ;">Cliente</label>
                <input type="text" id="Nombre" class="form-control" placeholder="Nombre del cliente" autocomplete="off">

                <ul id="sugerenciasClientes" class="list-group position-absolute w-100 color_Fondo_Sugerencias"
                    style="z-index:1050; display:none;">
                </ul>
            </div>

            <div class="col-md-2">
                <label class="form-label Textobohemia" style="color:white ;">Localidad</label>
                <input type="text" id="Localidad" class="form-control" readonly>
            </div>

            <div class="col-md-2">
                <label class="form-label Textobohemia" style="color:white ;">Teléfono</label>
                <input type="text" id="Telefono" class="form-control" readonly>
            </div>

            <div class="col-md-2">
                <label class="form-label Textobohemia" style="color:white ;">DNI / CUIL</label>
                <input type="text" id="Dni" class="form-control" readonly>
            </div>

        
                <div class="col-md-4  mt-3 ms-auto">
                    <button class="btn btn-outline-dark w-100" onclick="GuardarCobro()">
                        Guardar Cobro
                    </button>
                </div>
        </div>

        <!-- ================= GUARDAR ================= -->


        <!-- ================= FILTROS ================= -->
        <div class="row mb-4">
            <div class="col-md-4">
                <label class="Textobohemia" style="color:white ;">Buscar Cliente</label>
                <input class="form-control" id="txtBuscarCliente">
            </div>

            <div class="col-md-4">
                <label class="Textobohemia" style="color:white ;">Fecha Desde</label>
                <input type="date" class="form-control" id="FechaDesde">
            </div>

            <div class="col-md-4">
                <label class="Textobohemia" style="color:white ;">Fecha hasta</label>
                <input type="date" class="form-control" id="FechaHasta">
            </div>
        </div>

        <!-- ================= TABLA ================= -->
        <div class="table-responsive">
            <table class="table table-hover table-dark table-sm">
                <thead>
                    <tr>
                        <th class="Textobohemia-tabla">Monto</th>
                        <th class="ocultar-en-768px Textobohemia-tabla">Fecha</th>
                        <th class="ocultar-en-768px Textobohemia-tabla">Forma</th>
                        <th class="Textobohemia-tabla">Cliente</th>
                        <th class="Textobohemia-tabla">Teléfono</th>
                        <th class="ocultar-en-768px Textobohemia-tabla">Email</th>
                    </tr>
                </thead>
                <tbody id="tbody-cobro"></tbody>
            </table>
        </div>

    </div>

    @section Scripts {
        <script src="~/js/Cobro.1.0.0.js"></script>
    }

</body>